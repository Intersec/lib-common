static inline int get_char(pstream_t *ps, lstr_t *s) {
    int c, d;

    PS_CHECK(c = ps_getc(ps));
    if (c == '\\') {
        /* escaped character */
        PS_CHECK(d = ps_getc(ps));
        switch (d) {
          case '\\':
            *s = LSTR("\\\\");
            return 0;
          case '|': case '.': case '-': case '^': case '?':
          case '*': case '+': case '{': case '}': case '(': case ')':
          case '[': case ']':
            *s = LSTR_INIT_V(ps->s - 1, 1);
            return 0;
          default:
            return -1;
        }
    } else {
        switch (c) {
            /* unsupported regexp special char */
          case '|': case '.': case '-': case '^': case '?':
          case '*': case '+': case '{': case '}': case '(': case ')':
          case '[': case ']':
            return -1;
          default:
            *s = LSTR_INIT_V(ps->s - 1, 1);
            return 0;
        }
    }
}

