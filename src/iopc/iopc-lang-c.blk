    if (attrs->attrs_name.len) {
        sb_addf(buf, "        .attrs             = %*pM,\n",
                LSTR_FMT_ARG(attrs->attrs_name));
    }

    sb_adds(buf,
            "    },\n");
}

static void
iopc_dump_rpc_attrs_src(sb_t *buf, const iopc_attrs_t *attrs)
{
    sb_addf(buf,
            "    {\n"
            "        .flags             = %u,\n",
            attrs->flags);
    if (attrs->attrs_len) {
        sb_addf(buf,
                "        .attrs_len         = %u,\n"
                "        .attrs             = %*pM,\n",
                attrs->attrs_len, LSTR_FMT_ARG(attrs->attrs_name));
    }
    sb_adds(buf,
            "    },\n");
}

