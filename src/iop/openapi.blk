/* {{{ Server object */

static void t_server_object_to_yaml(const server_object_t * nonnull obj,
                                    yaml_data_t * nonnull out)
{
    yaml_data_t data;

    t_yaml_data_new_obj(out, 1);

    yaml_data_set_string(&data, t_lstr_fmt("%pL/%pL", &obj->url,
                                           &obj->route));
    yaml_obj_add_field(out, LSTR("url"), data);

    if (obj->description.s) {
        yaml_data_set_string(&data, obj->description);
        yaml_obj_add_field(out, LSTR("description"), data);
    }
}

