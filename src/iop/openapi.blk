static bool
t_rpc_is_blacklisted(const iop_iface_t * nonnull iface,
                     const iop_rpc_t * nonnull rpc,
                     qm_t(whitelist) *nonnull rpcs_whitelist)
{
    lstr_t fullname;
    int pos;

    if (qm_len(whitelist, rpcs_whitelist) == 0) {
        return false;
    }

    fullname = t_lstr_fmt("%pL.%pL", &iface->fullname, &rpc->name);
    pos = qm_find(whitelist, rpcs_whitelist, &fullname);
    if (pos >= 0) {
        /* mark the whitelisting as being "used", so that we can track which
         * one were not used, which is not supposed to happen. */
        rpcs_whitelist->values[pos] = true;
        return false;
    } else {
        return true;
    }
}

static bool
t_iop_rpc_add(iop_openapi_t * nonnull oa, const iop_rpc_t * nonnull rpc,
              const iop_iface_alias_t * nonnull alias)
{
    path_item_object_t *obj;

    if (t_rpc_is_blacklisted(alias->iface, rpc, &oa->rpcs_whitelist)) {
        return false;
    }

    obj = qv_growlen0(&oa->paths, 1);
    obj->path = t_lstr_fmt("/%pL/%pL", &alias->name, &rpc->name);
    t_iop_rpc_to_operation_object(rpc, alias,
                                  &oa->components.existing_schemas,
                                  &oa->components.schemas, &obj->post);
    return true;
}

static void
t_iop_iface_alias_add(iop_openapi_t * nonnull oa,
                      const iop_mod_t * nonnull mod,
                      const iop_iface_alias_t * nonnull alias)
{
    tag_object_t *tag;
    const iop_help_t *help;
    t_SB_1k(sb);
    bool has_rpcs = false;

    for (int j = 0; j < alias->iface->funs_len; j++) {
        const iop_rpc_t *rpc = &alias->iface->funs[j];
        const unsigned rpc_flags = rpc->flags;

        /* ignore rpc, will be taken into account in the following HAS_ALIAS
         * loop */
        if (TST_BIT(&rpc_flags, IOP_RPC_IS_ALIAS)) {
            continue;
        }

        has_rpcs |= t_iop_rpc_add(oa, rpc, alias);

        /* loop on rpc aliases */
        if (TST_BIT(&rpc_flags, IOP_RPC_HAS_ALIAS)) {
            const iop_rpc_attrs_t *attrs;

            attrs = iop_rpc_get_attrs(alias->iface, rpc);
            for (int k = 0; k < attrs->attrs_len; k++) {
                const iop_rpc_attr_t attr = attrs->attrs[k];

                if (attr.type == IOP_RPC_ALIAS) {
                    const iop_rpc_attr_arg_t arg = attr.args[0];
                    const iop_rpc_t *falias = (const iop_rpc_t *)arg.v.p;

                    has_rpcs |= t_iop_rpc_add(oa, falias, alias);
                }
            }
        }
    }

    if (!has_rpcs) {
        /* no RPCs have been added (probably because none was whitelisted).
         * do not add a unused tag in that case which could leak info about
         * an unexposed interface. */
        return;
    }

    /* add a tag for the iface */
    tag = qv_growlen0(&oa->tags, 1);
    tag->name = alias->name;

    /* Get description from both the iface alias in the module, and the iface
     * itself.
     */
    get_mod_iface_help(mod, alias, &help);
    if (help) {
        sb_add_lstr(&sb, t_iop_help_to_string(help, false));
    }

    get_iface_help(alias->iface, &help);
    if (help) {
        if (sb.len > 0) {
            sb_adds(&sb, "\n\n");
        }
        sb_add_lstr(&sb, t_iop_help_to_string(help, false));
    }
    tag->description = sb.len > 0 ? LSTR_SB_V(&sb) : LSTR_NULL_V;
}

static void
t_iop_mod_add(iop_openapi_t * nonnull oa, const iop_mod_t * nonnull mod)
{
    for (int i = 0; i < mod->ifaces_len; i++) {
        t_iop_iface_alias_add(oa, mod, &mod->ifaces[i]);
    }
}

