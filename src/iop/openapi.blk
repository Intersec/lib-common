                                 yaml_data_t * nonnull out)
{
    yaml_data_t data;

    t_yaml_data_new_obj(out, 2);

    yaml_data_set_string(&data, obj->name);
    yaml_obj_add_field(out, LSTR("name"), data);

    if (obj->description.s) {
        yaml_data_set_string(&data, obj->description);
        yaml_obj_add_field(out, LSTR("description"), data);
    }
}

/* }}} */
/* {{{ Public API */

iop_openapi_t *t_new_iop_openapi(const lstr_t title, const lstr_t version,
                                 const iop_mod_t *module, const lstr_t route)
{
    iop_openapi_t *oa = t_new(iop_openapi_t, 1);

    oa->info.title = t_lstr_dup(title);
    oa->info.version = t_lstr_dup(version);
    oa->module = module;

    t_qv_init(&oa->paths, 0);

    t_components_object_init(&oa->components);

    oa->server.route = t_lstr_dup(route);

    t_qv_init(&oa->tags, 0);

    t_qm_init(whitelist, &oa->rpcs_whitelist, 0);

    return oa;
}

void
t_iop_openapi_set_description(iop_openapi_t * nonnull oa,
                              const lstr_t description)
{
    oa->info.description = t_lstr_dup(description);
}

void
t_iop_openapi_set_security(iop_openapi_t * nonnull oa,
                           const lstr_t name,
                           openapi_security_type_t type)
{
    security_scheme_object_t *sec;

    sec = t_new(security_scheme_object_t, 1);
    sec->type = type;
    sec->name = t_lstr_dup(name);

    /* add security scheme in components */
    oa->components.security = sec;

    /* add security requirement in root obj */
    oa->security = sec->name;
}

void t_iop_openapi_set_server(iop_openapi_t * nonnull oa,
                              const lstr_t server_url,
                              const lstr_t description)
{
    oa->server.url = t_lstr_dup(server_url);
    if (description.s) {
        oa->server.description = t_lstr_dup(description);
    }
}

void t_iop_openapi_whitelist_rpc(iop_openapi_t *openapi,
                                 const lstr_t fullname)
{
    lstr_t name = t_lstr_dup(fullname);

    qm_add(whitelist, &openapi->rpcs_whitelist, &name, false);
}

void t_iop_openapi_add_struct(iop_openapi_t *openapi, const iop_struct_t *st)
{
    t_iop_struct_to_schema_object(st, &openapi->components.existing_schemas,
                                  &openapi->components.schemas);
}

int t_iop_openapi_to_yaml(iop_openapi_t *openapi, yaml_data_t *out,
                          sb_t *err)
{
    yaml_data_t data;
    yaml_data_t seq;
    bool has_unused_whitelist = false;

    if (openapi->module) {
        t_iop_mod_add(openapi, openapi->module);
    }

    /* check for whitelisted RPCs that have not been exposed: this indicate
     * a mistake, so print a log and return an error value. */
    qm_for_each_key_value(whitelist, name, used, &openapi->rpcs_whitelist) {
        if (!used) {
            logger_error(&_G.logger, "RPC `%pL` was whitelisted but has "
                         "not been exposed, it must be fixed", &name);
            has_unused_whitelist = true;
        }
    }

    if (has_unused_whitelist) {
        sb_setf(err, "invalid whitelist");
        return -1;
    }

    t_yaml_data_new_obj(out, 0);

    yaml_data_set_string(&data, LSTR("3.0.2"));
    yaml_obj_add_field(out, LSTR("openapi"), data);

    t_info_object_to_yaml(&openapi->info, &data);
    yaml_obj_add_field(out, LSTR("info"), data);

    t_yaml_data_new_seq(&seq, 1);
    t_server_object_to_yaml(&openapi->server, &data);
    yaml_seq_add_data(&seq, data);
    yaml_obj_add_field(out, LSTR("servers"), seq);

    t_paths_to_yaml(&openapi->paths, &data);
    yaml_obj_add_field(out, LSTR("paths"), data);

    t_components_object_to_yaml(&openapi->components, &data);
    yaml_obj_add_field(out, LSTR("components"), data);

    if (openapi->security.s) {
        yaml_data_t array;

        /* create an obj with a single key: the name of the security, and an
         * empty array as value */
        t_yaml_data_new_obj(&data, 1);
        t_yaml_data_new_seq(&array, 0);
        yaml_obj_add_field(&data, openapi->security, array);

        /* then save this obj in an array in the security key */
        t_yaml_data_new_seq(&array, 1);
        yaml_seq_add_data(&array, data);
        yaml_obj_add_field(out, LSTR("security"), array);
    }

    if (openapi->tags.len > 0) {
        t_yaml_data_new_seq(&seq, openapi->tags.len);
        tab_for_each_ptr(tag, &openapi->tags) {
            t_tag_object_to_yaml(tag, &data);
            yaml_seq_add_data(&seq, data);
        }
        yaml_obj_add_field(out, LSTR("tags"), seq);
    }

    return 0;
}

