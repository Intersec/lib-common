/* Fill a trie with 32 bits values with entries. */
static void z_fill_nonnull_trie32(qhat_t *trie, int nb_entries,
                                  qv_t(u32) *keys)
{
    for (int i = 0; i < nb_entries; i++) {
        uint32_t key;
        uint32_t *v;

        key = mem_hash32(&i, sizeof(i));
        v = qhat_set(trie, key);

        /* In order to ease the checks, value == key. */
        *v = key;

        /* Null values are forbidden. */
        assert(*v != 0);

        qv_append(keys, key);
    }

    /* List the keys added in the qhat in an ordered vector. */
    dsort32(keys->tab, keys->len);
    qv_clip(keys, uniq32(keys->tab, keys->len));

    /* Check for unexpected collision. */
    assert(keys->len == nb_entries);
}

static int
z_nr_en_val_after_rm(qps_t *qps, bool want_compact, bool want_struct_change)
{
    qps_handle_t htrie;
    qhat_t trie;
    qhat_enumerator_t en;
    uint32_t rm_val;
    const uint32_t *v;
    int step;
    int first_limit;
    int second_limit;
    uint32_t rm_key;

    if (want_compact) {
        /* Use a step to get sparse entries: sparse entries are more likely to
         * be stored in a compact leaf. */
        step = 20;
        first_limit = 10000;
        second_limit = 25000;
        rm_key = 4000;
    } else {
        /* Keep close to each other so they can be stored in a flat leaf. */
        step = 1;
        first_limit = 5000;
        second_limit = 8000;
        rm_key = 500;
    }

    /* Init the tree. */
    htrie = qhat_create(qps, 4, false);
    qhat_init(&trie, qps, htrie);

    /* Fill the tree. */
    for (int i = 0; i < first_limit; i += step) {
        *(uint32_t *)qhat_set(&trie, i) = i;
    }

    en = qhat_get_enumerator_at(&trie, rm_key);
    Z_ASSERT_EQ(en.t.compact, want_compact,
                "unexpected leaf type for the key to remove");

    /* Remove the element pointed by the enumerator. */
    Z_ASSERT(qhat_remove(&trie, rm_key, &rm_val));
    Z_ASSERT_EQ(rm_val, rm_key);

    if (want_struct_change) {
        /* Add keys until the hat structure changes. */
        for (int i = first_limit; i < second_limit; i += step) {
            *(uint32_t *)qhat_set(&trie, i) = i;
        }
        Z_ASSERT(en.t.path.gen.s.struct_gen != trie.gen.s.struct_gen,
                 "hat structure unchanged");
    }

    /* {{{ First attempt. */

    v = qhat_enumerator_get_value_safe(&en);
    Z_ASSERT_EQ(*v, 0u);
    Z_ASSERT_EQ(en.key, rm_key);

    /* }}} */
    /* {{{ Second attempt. */

    Z_ASSERT(en.t.path.gen.s.struct_gen == trie.gen.s.struct_gen,
             "hat structure unexpectedly updated after "
             "'qhat_enumerator_get_value_safe()'");

    v = qhat_enumerator_get_value_safe(&en);

    Z_ASSERT_EQ(*v, 0u);
    Z_ASSERT_EQ(en.key, rm_key);

    qhat_enumerator_go_to(&en, rm_key, true);
    Z_ASSERT_EQ(en.key, rm_key + step,
                "the enumerator did not reach the next key after "
                "go_to(rm_key)");

    /* }}} */

    qhat_destroy(&trie);
    Z_HELPER_END;
}

typedef int (z_qhat_test_f)(qhat_t *hat);

/* Run a test with all QHAT sizes, nullable or not. */
static int z_run_qhat_test(qps_t *qps, z_qhat_test_f *test_f)
{
    for (uint32_t value_len = 1; value_len <= 16; value_len *= 2) {
        for (int is_nullable = 0; is_nullable <= 1; is_nullable++) {
            qps_handle_t htrie;
            qhat_t trie;

            htrie = qhat_create(qps, value_len, !!is_nullable);
            qhat_init(&trie, qps, htrie);

            Z_HELPER_RUN((*test_f)(&trie),
                         "test failed with value_len=%u, is_nullable=%s",
                         value_len, is_nullable ? "true" : "false");

            qhat_destroy(&trie);
        }
    }

    Z_HELPER_END;
}

static int z_test_qhat_gen(qhat_t *hat)
{
    /* The field 'write_access_gen' does not exist out of debug mode. */
#ifndef NDEBUG
    qhat_gen_t gen;
    void *ptr;
    const char value[16] = "0123456789abcdef";

    gen = hat->gen;
    ptr = qhat_set(hat, 10);
    memcpy(ptr, value, hat->root->value_len);
    Z_ASSERT_NE(hat->gen.s.write_access_gen, gen.s.write_access_gen,
                "generation unchanged after qhat_set() (new row)");

    gen = hat->gen;
    ptr = qhat_set(hat, 10);
    memcpy(ptr, value, hat->root->value_len);
    Z_ASSERT_NE(hat->gen.s.write_access_gen, gen.s.write_access_gen,
                "generation unchanged after qhat_set() (existing row)");

    if (hat->root->is_nullable) {
        gen = hat->gen;
        qhat_set0(hat, 50, NULL);
        Z_ASSERT_NE(hat->gen.s.write_access_gen, gen.s.write_access_gen,
                    "generation unchanged after qhat_set0()");
    }

    gen = hat->gen;
    Z_ASSERT(qhat_remove(hat, 10, NULL));
    Z_ASSERT_NE(hat->gen.s.write_access_gen, gen.s.write_access_gen,
                "generation unchanged after qhat_remove()");

    gen = hat->gen;
    Z_ASSERT(!qhat_remove(hat, 100, NULL));
    Z_ASSERT_NE(hat->gen.s.write_access_gen, gen.s.write_access_gen,
                "generation unchanged after qhat_remove() of a row that "
                "did not exist");

    if (hat->root->is_nullable) {
        gen = hat->gen;
        qhat_remove(hat, 50, NULL);
        Z_ASSERT_NE(hat->gen.s.write_access_gen, gen.s.write_access_gen,
                    "generation unchanged after qhat_remove() (zero value)");
    }
#else
    Z_ASSERT(true);
#endif /* NDEBUG */

    Z_HELPER_END;
}

