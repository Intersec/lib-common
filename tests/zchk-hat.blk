        }

        /* Get the current value. */
        en = qhat_get_enumerator_at(&trie, 25);
        v = qhat_enumerator_get_value_safe(&en);
        Z_ASSERT_EQ(*v, 25u);

        /* Insert keys before the current one. */
        en = qhat_get_enumerator_at(&trie, 25);
        for (int i = 1; i < 25; i++) {
            *(uint32_t *)qhat_set(&trie, i) = i;
